@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up in Balterion";
}

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-sm-4 my-4">
            <form method="post" asp-controller="Authentication" asp-action="Register" class="rounded bg-dark p-5">
                <h3 class="text-light text-center mb-4">Balterion.com</h3>
                <h6 class="text-light text-center">Sign up</h6>
                <div class="form-group mb-3">
                    <p class="text-light">
                        <span asp-validation-for="Username"></span>
                    </p>

                    <label asp-for="Username"
                           class="text-light">
                    </label>

                    <input type="text"
                           asp-for="Username"
                           id="username"
                           class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="Password"></span>
                    </p>

                    <label
                        asp-for="Password"
                        class="text-light">
                    </label>

                    <input id="password" type="password" asp-for="Password" class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="RepeatPassword"></span>
                    </p>

                    <label
                        asp-for="RepeatPassword"
                        class="text-light">
                    </label>

                    <input id="repeatPassword" type="password" asp-for="RepeatPassword" class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="FirstName"></span>
                    </p>

                    <label
                        asp-for="FirstName"
                        class="text-light">
                    </label>

                    <input id="firstName" type="text" asp-for="FirstName" class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="LastName"></span>
                    </p>

                    <label
                        asp-for="LastName"
                        class="text-light">
                    </label>

                    <input id="lastName" type="text" asp-for="LastName" class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="PhoneNumber"></span>
                    </p>

                    <label
                        asp-for="PhoneNumber"
                        class="text-light">
                    </label>

                    <input id="phoneNumber" type="text" asp-for="PhoneNumber" class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="Email"></span>
                    </p>

                    <label
                        asp-for="Email"
                        class="text-light">
                    </label>

                    <input id="email" type="email" asp-for="Email" class="form-control"/>
                </div>

                <div class="form-group mb-2">
                    <p class="text-light">
                        <span asp-validation-for="DateOfBirth"></span>
                    </p>

                    <label
                        asp-for="DateOfBirth"
                        class="text-light">
                    </label>

                    <input id="dateOfBirth" type="date" asp-for="DateOfBirth" class="form-control"/>
                </div>

                <div class="mb-3">
                    <span class="text-light">Already have an account?</span>
                    <a asp-controller="Authentication" asp-action="Login" class="link-dark text-primary">Sign up here</a>
                </div>
                <div>
                    <input type="submit" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>